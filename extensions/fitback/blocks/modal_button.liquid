{{ 'modal.css' | asset_url | stylesheet_tag }}

<div id="modal-overlay" class="modal-overlay hidden">
  <div class="modal-content">
    <h2>Enter Your Measurements</h2>
    <form id="measurement-form">
      <label for="chest">Chest (cm):</label>
      <input type="number" id="chest" name="chest" placeholder="Enter chest measurement" required>

      <label for="height">Height (cm):</label>
      <input type="number" id="height" name="height" placeholder="Enter height measurement" required>

      <label for="hip">Hip (cm):</label>
      <input type="number" id="hip" name="hip" placeholder="Enter hip measurement" required>

      <button type="submit" id="submit-measurements" class="submit-button">Submit</button>
    </form>

    <!-- Placeholder for Recommended Size -->
    <div id="recommendation-container" class="recommendation-container hidden">
      <h3>Recommended Size:</h3>
      <p id="recommended-size">N/A</p>
    </div>

    <button id="close-modal" class="close-button">Close</button>
  </div>
</div>

<button id="open-modal" class="open-modal-button">Enter Measurements</button>

<script src="{{ 'modal.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "Modal Button",
  "target": "section",
  "settings": []
}
{% endschema %}
