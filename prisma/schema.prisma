// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model SizingTable {
  id          String    @id @default(cuid())
  shop        String    // New field to link sizing table to a specific store
  apparelType String
  data        Json
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([shop, apparelType]) // Ensure that each shop can have unique apparel types
}

model Product {
  id               String   @id @default(cuid())
  shopifyProductId String   @unique
  sizingTableId    String
  sizingTable      SizingTable @relation(fields: [sizingTableId], references: [id])
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
